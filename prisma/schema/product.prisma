model Product {
    id          String      @id @default(uuid())
    name        String
    description String?
    image       String?
    price       Decimal     @db.Decimal(10, 2)
    stock       Int         @default(0)
    isActive    Boolean     @default(true)
    createdAt   DateTime    @default(now())
    updatedAt   DateTime    @updatedAt
    payments    Payment[]

    orders Order[]
}
