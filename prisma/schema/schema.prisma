generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  PAID
  FAILED
  CANCELLED
}

enum PaymentStatus {
  INITIATED
  PROCESSING
  SUCCEEDED
  FAILED
  REFUNDED
}


