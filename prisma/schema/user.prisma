model User {
  id        String   @id @default(uuid())
  firstName String?
  lastName  String?
  email     String   @unique
  phone     String?
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  IsActive  Boolean  @default(true)
  image     String?
  verified  Boolean  @default(false)
  location  String?
  orders    Order[]

  @@index([email])
}
